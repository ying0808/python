    "## 刪除檔案"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 48,
   "metadata": {},
   "outputs": [
    {
    "name": "stdout",
     "output_type": "stream",
     "text": [
      "檔案刪除成功\n",
      "False\n"
     ]
    }
   ],
   "source": [
    "if os.path.isfile(\"a.txt\"): #判斷檔案是否存在\n", 
    "    os.remove(\"a.txt\") #檔案若存在，則刪除a.txt檔\n",
    "    print(\"檔案刪除成功\") #並印出刪除成功\n",
    "else:\n",
    "    print(\"找不到檔案\") #找不到則印出此行\n",
    "print(os.path.isfile(\"a.txt\")) #判斷檔案是否存在"
   ]
